<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
    <class name="db.Image" table="images">
        <id name="imageUrl" column="image_url" />
        <property name="productUrl" column="product_url" />
        <property name="productImage" column="product_image" type="mediumblob"/>
    </class> 
</hibernate-mapping>